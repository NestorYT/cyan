# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
POST    /ping                       controllers.Ping.ping

GET     /admin/products                          controllers.admin.Products.list
POST    /admin/products                          controllers.admin.Products.create
GET     /admin/products/:id                      controllers.admin.Products.view(id: Int)
POST    /admin/products/:id/response             controllers.admin.Products.setProductLicenseResponse(id: Int)

GET     /admin/products/:id/licences/:lid        controllers.admin.Products.licenseView(id: Int, lid: String)

GET     /admin/responses                         controllers.admin.Responses.list
POST    /admin/responses                         controllers.admin.Responses.create
GET     /admin/responses/:id                     controllers.admin.Responses.view(id: Int)

GET     /admin/anomalies                         controllers.admin.Anomalies.overview

# WebJar assets
GET     /webjars/*file                           controllers.WebJarAssets.at(file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                            controllers.Assets.at(path="/public", file)

    
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
POST    /ping                       controllers.Ping.ping

GET     /admin/products             controllers.Admin.productList
POST    /admin/products             controllers.Admin.createProduct
GET     /admin/products/:id                      controllers.Admin.productView(id: Int)
POST    /admin/products/:id/response             controllers.Admin.setProductLicenseResponse(id: Int)

GET     /admin/products/:id/licences/:lid        controllers.Admin.licenseView(id: Int, lid: String)

GET     /admin/responses                         controllers.Admin.responseList
POST    /admin/responses                         controllers.Admin.createResponse
GET     /admin/responses/:id                     controllers.Admin.responseView(id: Int)

GET     /admin/anomalies                         controllers.admin.AdminAnomalies.overview

# WebJar assets
GET     /webjars/*file                           controllers.WebJarAssets.at(file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                            controllers.Assets.at(path="/public", file)

    